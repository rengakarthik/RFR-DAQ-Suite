<UserControl x:Class="RFR_DAQ_Suite.Gauge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RFR_DAQ_Suite"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Viewbox>
        <Grid>
            <Ellipse HorizontalAlignment="Left" Height="350" Stroke="Black" VerticalAlignment="Top" Width="350" Margin="-2,0,0,0">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="Black" Offset="1"/>
                        <GradientStop Color="#FF114EF1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Rectangle x:Name="Arrow2" Fill="#FFEA170D" HorizontalAlignment="Left" Height="127" Stroke="Black" VerticalAlignment="Top" Width="4" Margin="171,48,0,0" RenderTransformOrigin="0.5,1"/>
            <Rectangle x:Name="Arrow1" Fill="#FF3FEA0D" HorizontalAlignment="Left" Height="127" Stroke="Black" VerticalAlignment="Top" Width="4" Margin="171,48,0,0" RenderTransformOrigin="0.5,1"/>

        </Grid>
    </Viewbox>
</UserControl>
